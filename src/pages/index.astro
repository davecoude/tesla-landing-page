<Layout title="Welcome to Astro.">
	<main class="font-Gotham">
		<!-- menu de navegaciÃ³n -->
		<header class="w-full flex items-center p-4 top-0 justify-between fixed font-medium text-sm z-20 text-white">
			<div class="flex flex-grow basis-0">
				<svg class="w-28" viewBox="0 0 342 35" xmlns="http://www.w3.org/2000/svg"><path d="M0 .1a9.7 9.7 0 0 0 7 7h11l.5.1v27.6h6.8V7.3L26 7h11a9.8 9.8 0 0 0 7-7H0zm238.6 0h-6.8v34.8H263a9.7 9.7 0 0 0 6-6.8h-30.3V0zm-52.3 6.8c3.6-1 6.6-3.8 7.4-6.9l-38.1.1v20.6h31.1v7.2h-24.4a13.6 13.6 0 0 0-8.7 7h39.9v-21h-31.2v-7h24zm116.2 28h6.7v-14h24.6v14h6.7v-21h-38zM85.3 7h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 13.8h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zm0 14.1h26a9.6 9.6 0 0 0 7.1-7H78.3a9.6 9.6 0 0 0 7 7zM308.5 7h26a9.6 9.6 0 0 0 7-7h-40a9.6 9.6 0 0 0 7 7z" fill="currentColor"></path></svg>
			</div>

			<nav class="flex flex-grow justify-center">
				<ul class="flex [&>li>a]:inline-block [&>li>a]:px-2 [&>li>a]:text-white">
					<li><a href="#">Model S</a></li>
					<li><a href="#">Model 3</a></li>
					<li><a href="#">Model X</a></li>
					<li><a href="#">Model Y</a></li>
					<li><a href="#">Solar Roof</a></li>
					<li><a href="#">Solar Panels</a></li>
					<li><a href="#">Powerall</a></li>
				</ul>
			</nav>

			<nav class="flex flex-grow justify-end">
				<ul class="flex [&>li>a]:inline-block [&>li>a]:px-2 [&>li>a]:text-white">
					<li><a href="#">Shop</a></li>
					<li><a href="#">Account</a></li>
					<li><a href="#">Menu</a></li>
				</ul>
			</nav>
		</header>

		<!-- home video -->
		<section class="flex relative top-0 bottom-0 w-screen h-screen">

			<div class="absolute w-full h-[50%] text-white text-center flex flex-col justify-end pb-56">
				<h2 class="text-[40px] font-medium">
					Experience Tesla
				</h2>
				<p class="text-[14px] font-normal">
					Schedule a Demo Drive Today
				</p>
			</div>

			<div class="absolute w-full h-[50%] bottom-0 flex flex-col justify-end items-center pb-20 cursor-pointer">
				<a class="flex flex-nowrap justify-center items-center border-white border-[3px] rounded w-[264px] h-[40px] text-white text-[14px] font-medium">Demo Drive</a>
			</div>

			<video class="h-full w-full object-center object-cover" autoplay muted loop src="./public/video-home.webm"></video>
		</section>

	</main>
</Layout>
